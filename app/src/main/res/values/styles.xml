<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TFRobotoBold16" parent="TextStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TFRobotoBold14" parent="TextStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TFRobotoBold20" parent="TextStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="TFRobotoBold26" parent="TextStyle">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_26sp</item>
    </style>

    <style name="TFRobotoRegular20" parent="TextStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="TFRobotoRegular14" parent="TextStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="TFRobotoRegular16" parent="TextStyle">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogTextStyle</item>
        <item name="android:background">?attr/white_universal</item>
    </style>

    <style name="AlertDialogTextStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?attr/black_universal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>
</resources>